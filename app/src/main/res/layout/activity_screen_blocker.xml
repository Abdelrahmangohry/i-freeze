<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".presentation.activity.ScreenBlockerActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="200dp"
        android:paddingBottom="200dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:clickable="false"
                android:focusable="false"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_add_circle_24" />

            <ImageView
                android:id="@+id/appblockr_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:clickable="false"
                android:focusable="false"

                android:outlineSpotShadowColor="@color/darkGrey"
                android:padding="5dp"
                android:src="@drawable/ic_launcher_zz" />
        </RelativeLayout>


        <TextView
            android:id="@+id/empty_blocked_list_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Add something to block"
            android:textAlignment="center"
            android:textColor="@color/lightBlue"
            android:textSize="15sp" />

        <Button
            android:id="@+id/close_block_screen_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close" />


    </LinearLayout>
</LinearLayout>